<section id="main-content">
  <section class="wrapper">
    <div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                           EDIT ARTIST
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <!-- <form role="form"> -->
                                <%= form_tag admin_artist_path , method: "put" , multipart: true do %>
                                <div class="form-group">
                                    <label>Artist Name</label>
                                    <%= text_field_tag('artist[name]', @artist.name, :class => "form-control")%>
                                </div>
                                <div class="form-group">
                                    <label>Artist Address</label>
                                    <%= text_field_tag('artist[address]', @artist.address , class: "form-control" , :placeholder => "address")%>
                                </div>
                                <div class="form-group">
                                    <label>Description:</label>
                                    <%= text_area_tag('artist[description]', @artist.description, style: "margin: 0px; width: 527px; height: 173px;") %>
                                </div>

                                <div class="form-group">
                                    <label>Image</label>
                                    <%if @artist.attachments.present?%>
                                      <%= image_tag @artist.attachments.first.attachment.url(:thumb) %>
                                    <%end%>
                                    <%= file_field_tag('artist[attachment]') %>
                                </div>

                                
                               <%= submit_tag "Update" , class: "btn btn-info"%>
                              <%= link_to "Cancel", admin_artists_path, class: "btn btn-info"%>
                            <%end%>
                            </div>

                        </div>
                    </section>

            </div>
        </div>
  
</section>
</section>
