<section id="main-content">
	<section class="wrapper">
		<div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                           NEW ARTIST
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <%= form_for @artist, url: admin_artists_path(@artist) do |form| %>
                                <div class="form-group">
                                    <%= form.label :name%>
                                    <%= form.text_field :name , class: "form-control", :placeholder=> "category name"%>
                                </div>
                                <div class="form-group">
                                  <%= form.label :address %>
    							<%= form.text_field :address, class: "form-control", :placeholder=>"Address"%>
                                </div>
                                <div class="form-group">
                                    <%= form.label :description %><br>
    								<%= form.text_area(:description, size: '25x5', style: "margin: 0px; width: 527px; height: 173px;") %>
                                </div>
                                <div class="form-group">
                                    <%= form.label :image %>
    								<%= form.file_field :attachment%>
                                </div>
                                <%= form.submit "Submit",class: "btn btn-info" %>
                                <%= link_to "Cancel", admin_artists_path, class: "btn btn-info"%>
                            <%end%>
                            </div>

                        </div>
                    </section>

            </div>
        </div>
	
</section>
</section>
