<div class="container">
	<div class="custom-cards">
	  <%= form_for searchevents_path, :method => 'get' do %>
	    <div style="position: relative;">
	     <%= select_tag(:category_id, options_for_select(@categories), :prompt=> "select a categories", :class=>"banner-select-box")%>
	    </div>
	    <div style="position: relative;">
	      <%= select_tag(:state_name, options_for_select(@states), :prompt=> "select a state", :class=>"banner-select-box")%>
	    </div>
	    <div style="border-right: none;  position: relative;">
	     <%= text_field_tag :title, params[:title] ,:placeholder=>"title name",:class=>"banner-select-box"%>
	    </div>
	    <%= submit_tag "Search", :name => nil , :class=> "lets-start" %>
	  <%end%>
	</div>
 	<!-- <h3 class="heading"><b>Se</b></h3>
 	<div class="custom-top-cards"> -->
  	<%if @events.present?%>
   		<% @events.each do |recent_event|%>
      	<div class="top-card-wrapper">
         	<div class="top-card-image">
            <img src="https://eventwebsite.herokuapp.com/<%= recent_event[:image]%>">
            <label><%= distance_of_day(recent_event[:event_date][0],recent_event[:event_date][1] )%></label>
         	</div>
         	<div class="top-card-content">
            <div class="top-card-timing">
               <div class="fl">
                  <i class="fa fa-calendar">
                  </i>
                  <%= recent_event[:event_date][0]%> to <%= recent_event[:event_date][1]%>
               </div>
               <div class="fr">
                  <i class="fa fa-clock-o"></i>
                  12:00 PM
               </div>
               <div class="cl"></div>
            </div>
            <div class="top-card-heading">
               <%= recent_event[:title]%>
            </div>
            <p class="top-card-des">
               Immerse yourself in a full-on wonderland
               of festivities, dazzling decoration and a
               large helping of holiday magic. From a
               merry christmas choir.
            </p>
            <a href="#" class="read-more-new">Read More...</a>
         	</div>
    		</div>
      <%end%>
    <%else%>
    	<h2>No records Founds</h2>
    <%end%>
  </div>
</div>

          
      
      
      
    