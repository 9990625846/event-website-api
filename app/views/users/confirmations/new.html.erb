<%flash[:errors] = resource.errors.full_messages%>
<div class="container">
  <div class="col-sm-12 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8 signup sign-up">
    <h2 class="header-text">Resend confirmation instructions</h2>
    <div class="row">
      <div class="col-sm-12 nopadding">
        <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
          <div class="form-group col-sm-6 ">
            <input type="text" name="user[email]" id="email" class="form-control input" value ="<%= resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email%>" placeholder="Email" >
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group text-center btn_sign_up">
                <input type="submit" class="btn" value="Resend confirmation instructions" id="regform" name="submit">
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>