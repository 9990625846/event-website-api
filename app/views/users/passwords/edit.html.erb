<%flash[:errors] = resource.errors.full_messages%>
<div class="container">
  <div class="col-sm-12 col-md-offset-2 col-md-8 col-lg-offset-2 col-lg-8 signup sign-up">
    <h2 class="header-text">Change your password</h2>
    <div class="row">
      <div class="col-sm-12 nopadding">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field :reset_password_token %>
          <div class="form-group col-sm-12 ">
           <%= f.label :password, "New password" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <input type="password" name="user[password]" id="password" class="form-control input" autocomplete="off" placeholder="password">
          </div>
          <div class="form-group col-sm-12 ">
           <%= f.label :password, "Confirm new password" %><br />
            
            <input type="password" name="user[password_confirmation]" id="password_confirmation" autocomplete="off" class="form-control input" placeholder="Confirm password">
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group text-center btn_sign_up">
                <input type="submit" class="btn" value="Change my password" id="regform" name="submit">
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>